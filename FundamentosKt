fun main() {
    println("eu sou lindo.") //exibir mensagens no console
    
    /*
     * ele
     * é
     * um
     * comentário
     * de
     * mais
     * de
     * uma
     * linha     
     */
     
     //Variáveis - elas armazenam valores
     
     //variáveis mutáveis - seu valor pode ser alterado ------------- var
     //variáveis não mutáveis - seu valor NÃO pode ser alterado ----- val
     //
     // Tipos de Variáveis
     // 
     // Boolean - verdadeiro ou falso Ex: true e false
     // String - Caracteres no geral ... entre ASPAS DUPLAS - sem limite de caracteres ex: "João Geromel Cadeira"
     // Char - apenas 1 digito de caracteres ... dentro de ASPAS SIMPLES Ex: 'J'
     // Int - armazena números inteiros Ex: 100
     // Double - números decimais, com um limite de até 7 dígitos após a vírgula - arredonda o número Ex.: 22.5
     // Float - múmeros decimais, com um limite de até 14 dígitos após a vírgula - arredonda o número Ex.: 22.5f
     // Long - números longos com muitos digitos inteiro, ou decimal Ex.: 80000000000000000000000
     // 
     // Estrutura de uma variável:
     // 
     // var nome = valor
     //       ou
     // var nome: Tipo
     // 
     var professoresDeGeografia = "Glória" 
     var professorr: String 
}
